{
    "extends": "@tsconfig/node21/tsconfig.json", // «———— ESM 基础
    "compilerOptions": {
        "module": "NodeNext",
        //
        "declaration": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [],
        //
        "removeComments": true,
        "esModuleInterop": true,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strict": true, //trpc要严格模式
        "strictNullChecks": true, //https://github.com/trpc/trpc/issues/4426
        "noImplicitAny": false,
        "strictBindCallApply": false,
        "noFallthroughCasesInSwitch": false,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ],
    // "ts-node": {
    //     "esm": true, // «———— 为 ts-node 启用 ESM
    // },
}
