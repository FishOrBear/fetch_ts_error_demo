{
    "compilerOptions": {
        "module": "commonjs",
        //
        "declaration": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [],
        //
        "removeComments": true,
        "esModuleInterop": true,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strict": true, //trpc要严格模式
        "strictNullChecks": true, //https://github.com/trpc/trpc/issues/4426
        "noImplicitAny": false,
        "strictBindCallApply": false,
        "noFallthroughCasesInSwitch": false,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}
